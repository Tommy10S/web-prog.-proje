@using EntityLayer.Concrete
@model List<Animals>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>HAYVANLARIN VERİ TABANINDAN YANSITILMASI</h2>

<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Türü</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
     {
        <tr>
            <td>@item.AnimalID</td>
            <td>@item.AnimalName</td>
            <td>@item.AnimalType</td>
            <td><a href="/AdminAnimals/DeleteAnimal/@item.AnimalID" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminAnimals/EditAnimals/@item.AnimalID" class="btn btn-primary">Güncelle</a></td>
        </tr>


     }


</table>
<br />
<a href="/AdminAnimals/AddAnimal" class="btn btn-info">yeni hayvan</a>